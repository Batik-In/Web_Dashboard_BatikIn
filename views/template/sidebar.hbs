    <script>
    $(document).ready(() => {
        $('#logoutBtn').click(() => {
            localStorage.clear()
            window.location = '/login'
        });
        fetchUserDetail2();
    });
    const fetchUserDetail2 = () => {
       $.ajax({
        url: `${BACKEND_URL}/api/user/detail`,
        method: 'GET',
        dataType: 'JSON',
        headers: {
          'Authorization': `Bearer ${accessToken}`
        },
        success: (response) => {
          const {name, role} = response.data;
          $('#sidebarName').val(name);
          $('#sidebarRole').val(role);
          let profile = response.data?.profilePicture || DEFAULT_PROFILE;
          profile = profile === '' ? DEFAULT_PROFILE : profile;
          $('#sidebarProfile').attr('src', profile);
          $('#sidebarProfile2').attr('src', profile);
        },
        error: (err) => {
          console.log(err)
        }
       });
    }
